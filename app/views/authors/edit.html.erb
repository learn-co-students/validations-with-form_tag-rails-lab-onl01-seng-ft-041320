<h2>Editing "<%= @author.name %>"</h2>
<%= form_tag author_path(@author), method: "patch" do %>
  <div class="field">
    <%= label_tag "name", "Name" %>
    <%= text_field_tag "name", @post.name %>
  </div>

  <div class="field">
    <%= label_tag "email", "Email" %>
    <%= text_field_tag "email", @post.email %>
  </div>

  <div class="field">
    <%= label_tag "phone_number", "Phone Number" %>
    <br />
    <%= text_area_tag "phone_number", @post.phone_number %>
  </div>
  <%= submit_tag "Update" %>
<% end %>

